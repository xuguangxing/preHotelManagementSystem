<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xu.mapper.user.UserMapper">

    <resultMap id="userMap" type="com.xu.pojo.user.User">
        <id property="id" column="id" />
        <result property="userName" column="username"/>
        <result property="passWord" column="password"/>
        <result property="idCard" column="idCard"/>
        <result property="userPhone" column="userPhone"/>
        <result property="realName" column="realName"/>
        <result property="userNameImage" column="userNameImage"/>
        <result property="userRealImage" column="userRealImage"/>
        <result property="userEmail" column="userEmail"/>
        <result property="idCardImagePositive" column="idCardImagePositive"/>
        <result property="idCardImageNegative" column="idCardImageNegative"/>
        <result property="address" column="address"/>
        <collection property="roles" ofType="com.xu.pojo.role.Role">
            <result column="roleName" property="roleName"/>
            <collection property="authorities" ofType="com.xu.pojo.authority.Authority">
                <result property="id" column="id"></result>
                <result property="authorityName" column="authorityName"></result>
            </collection>
        </collection>
    </resultMap>

    <!--查询所有的用户信息及对应的角色信息-->
    <select id="findByUserName" resultMap="userMap">
       select user.id,userName,passWord,roleName, authorityName from user
            left join user_role on user.id=user_role.userid
            left join role on role.id= user_role.roleId
            JOIN role_authority on user_role.roleId=role_authority.role_id
            JOIN authority on role_authority.authority_id=authority.id
            where user.userName=#{userName}
    </select>

</mapper>